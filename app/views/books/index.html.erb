<h1>Books</h1>
<% @books.each do |book| %>
　<table>
　 <thead>
　  <tr>
　    <th>Title</th>
　    <th>Body</th>
　    <th colspan="3"></th>
　   </tr>
　  </thead>
　</table>
<h1>New book</h1>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Book</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

<% end %>