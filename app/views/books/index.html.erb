<h1>Books</h1>
　<table>
　  <tr>
　    <th>Title</th>
　    <th>Body</th>
　    <th colspan="3"></th>
　  </tr>
　  <% @books.each do |book| %>
　  <tr>
　    <td><%= book.title %></td>
　  </tr>
　  <tr>
　    <td><%= book.body %></td>
　  </tr>
　  <% end %>
　</table>
<h1>New book</h1>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Book</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>