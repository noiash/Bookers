<html>
 <body>
   <p id="notice"></p>
   <h1>Books</h1>
　 <table>
　   <thead>
　    <tr>
　     <th>Title</th>
　     <th>Body</th>
　     <th colspan="3"></th>
　    </tr>
　   </thead>


　   <tbody>
　    <% @books.each do |book| %>
　    <tr>
　      <td><%= book.title %></td>
　      <td><%= book.body %></td>
　      <td></td>
　    </tr>
　    <% end %>
　   </tbody>

　 </table>
<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>
  <p><h4>Title</h4>
  <%= f.text_field :title %></p>

  <P><h4>Body</h4>
  <%= f.text_area :body %></P>

  <div class="actions"><%= f.submit 'Create Book' %></div>

<% end %>
 </body>
</html>