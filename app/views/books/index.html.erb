<html>
 <body>
   <p id="notice"></p>
   <h1>Books</h1>
　 <table>
　   <thead>
　    <tr>
　     <th>Title</th>
　     <th>Body</th>
　     <th colspan="3"></th>
　    </tr>
　   </thead>


　   <tbody>
　    <% @books.each do |book| %>
　    <tr>
　      <td><%= book.title %></td>
　      <td><%= book.body %></td>
　      <td><%= link_to 'Show', book_path(book.id) %></td>
　      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
　      <td><%= link_to 'Destroy', books_path %></td>
　    </tr>
　    <% end %>
　   </tbody>

　 </table>
<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>
 <div class="field">
  <label>Title</label>
  <div class="book_title">
  <%= f.text_field :title, class: 'book_title' %>
  </div>
 </div>

 <div class="field">
  <label>Body</label>
  <div class="book_body">
  <%= f.text_area :body, class: 'book_body' %>
  </div>
 </div>

  <div class="actions">
  <%= f.submit 'Create Book', class: 'button' %>
  </div>

<% end %>
 </body>
</html>