<html>
 <body>
<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
 <div class="field">
  <label>Title</label>
  <div class="book_title">
  <%= f.text_field :title, class: 'book_title' %>
  </div>
 </div>

 <div class="field">
  <label>Body</label>
  <div class="book_body">
  <%= f.text_area :body, class: 'book_body' %>
  </div>
 </div>

  <div class="actions">
  <%= f.submit 'Update Book', class: 'button' %>
  </div>

<% end %>
  <%= link_to 'Show', book_path(@book.id) %> |
  <%= link_to 'Back', books_path %>
 </body>
</html>